---
import '../styles/global.css'
import { ClientRouter } from 'astro:transitions'
import Logo from '../components/Logo.astro'
import UserProfile from '@/components/user/UserProfile.vue'
import SwapTheme from '@/components/theme/SwapTheme.astro'

const { namespace } = Astro.props
const theme = await Astro.session?.get('theme') || 'light'
const me = await Astro.session?.get('me')

if (!me) {
  Astro.redirect('/signin')
}

---
<!doctype html>
<html lang="ru" data-theme={theme}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro Basics</title>
		<link
            rel="stylesheet"
            type="text/css"
            href="/icons/regular/regular.css"
        />
        <ClientRouter />
	</head>
    	<body >
           	<header class="h-16">
               	<div class="navbar bg-base-100">
                        <Logo />
                        <div class="flex items-center gap-x-2">
                            <SwapTheme />
                            <UserProfile username={me?.user?.username} client:idle />
                        </div>
                    </div>
           	</header>

            <div>
               	<main data-barba="wrapper">
                   	<div data-barba="container" data-barba-namespace={namespace} class="contents">
                  		<slot />
                   	</div>
               	</main>
            </div>

    	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
