---
import '../styles/global.css'
import Barba from '../components/Barba.astro'
import Logo from '../components/Logo.astro'
import UserNavbar from '../components/UserNavbar.vue'
import SwapTheme from '@/components/theme/SwapTheme.astro'

const { namespace } = Astro.props
const theme = await Astro.session?.get('theme') || 'light'

---
<!doctype html>
<html lang="en" data-theme={theme}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro Basics</title>
		<Barba />
		<link
            rel="stylesheet"
            type="text/css"
            href="/icons/regular/regular.css"
        />
	</head>
    	<body data-barba="wrapper">
       	<div data-barba="container" data-barba-namespace={namespace} class="contents">
               	<header class="h-16">
                   	<div class="navbar bg-base-100">
                            <Logo />
                            <div class="flex items-center gap-x-2">
                                <SwapTheme />
                                <UserNavbar client:idle />
                            </div>
                        </div>
               	</header>
               	<main>
              		<slot />
               	</main>
       	</div>
    	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
