---
import '../styles/global.css'
// import Barba from '../components/Barba.astro'
import { ClientRouter } from 'astro:transitions'
import Logo from '../components/Logo.astro'
import SwapTheme from '@/components/theme/SwapTheme.astro'

const { namespace } = Astro.props
const theme = await Astro.session?.get('theme') || 'light'

---
<!doctype html>
<html lang="ru" data-theme={theme}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro Basics</title>
		<ClientRouter />
		<link
            rel="stylesheet"
            type="text/css"
            href="/icons/regular/regular.css"
        />
	</head>
    	<body>
       	    <div class="h-dvh flex flex-col overflow-auto">
               	<header class="pb-16">
                   	<div class="border-b border-base-300 navbar bg-base-100">
                        <Logo />
                        <SwapTheme />
                    </div>
               	</header>
               	<main data-barba="wrapper">
                   	<div data-barba="container" data-barba-namespace={namespace} class="contents">
                  		<slot />
                   	</div>
               	</main>
           	</div>
    	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
