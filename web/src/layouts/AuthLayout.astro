---
import '../styles/global.css'
import Barba from '../components/Barba.astro'


const { namespace } = Astro.props

---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro Basics</title>
		<Barba client:idle />
	</head>
	<body data-barba="wrapper">
	<div  data-barba="container" class="contents" data-barba-namespace={namespace}>
   	    <div class="h-dvh flex flex-col overflow-auto">
           	<header class="sticky top-0 h-16">
               	<div class="navbar bg-base-100">
                        <div class="flex-1">
                            <a href="/" class="btn btn-ghost text-xl">CoreVox</a>
                        </div>
                    </div>
           	</header>
           	<main class="grow flex items-center justify-center">
          		<slot />
           	</main>
    	</div>
	</div>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
