---
import '../styles/global.css'
import Barba from '../components/Barba.astro'
import Logo from '../components/Logo.astro'
import SwapTheme from '@/components/theme/SwapTheme.astro'

const { namespace } = Astro.props
const theme = await Astro.session?.get('theme') || 'light'

---
<!doctype html>
<html lang="ru" data-theme={theme}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro Basics</title>
		<Barba />
		<link
            rel="stylesheet"
            type="text/css"
            href="/icons/regular/regular.css"
        />
	</head>
    	<body data-barba="wrapper">
           	<div  data-barba="container" class="contents" data-barba-namespace={namespace}>
               	    <div class="h-dvh flex flex-col overflow-auto">
                       	<header class="sticky top-0 h-16">
                           	<div class="navbar bg-base-100">
                                <Logo />
                                <SwapTheme />
                            </div>
                       	</header>
                       	<main class="grow flex items-center justify-center">
                      		<slot />
                       	</main>
               	</div>
           	</div>
    	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
